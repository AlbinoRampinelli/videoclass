generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String       @id @default(cuid())
  name              String?
  image             String?
  email             String?      @unique
  cpf               String?      @unique
  passwordHash      String?
  codigoVerificacao String?
  phone             String?
  schoolName        String?
  emailVerified     DateTime?
  userType          UserType     @default(RESPONSAVEL)
  createdAt         DateTime     @default(now()) // <--- ADICIONE ESTA LINHA
  accounts          Account[]
  enrollments       Enrollment[]
  sessions          Session[]
}
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
enum CourseFormat {
  ONLINE
  PRESENCIAL
}
model Course {
  id          String       @id @default(cuid())
  slug        String       @unique
  title       String
  format      CourseFormat @default(ONLINE)
  description String?
  price       Float
  duration    String?      // ADICIONADO: Ex: "40h"
  features    String[]     // ADICIONADO: ["Vitalício", "Kit Incluso"]
  imageUrl    String?
  enrollments Enrollment[]
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  status    String   @default("active")
  createdAt DateTime @default(now())
  course    Course   @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  @@unique([userId, courseId])
}

enum UserType {
  ALUNO
  RESPONSAVEL
  PROFESSOR
  OUTRO
}
model Interest {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  cpf       String
  createdAt DateTime @default(now())

  @@unique([userId, courseId]) // Um interesse por curso por usuário
}

model Lead {
  id        String   @id @default(cuid())
  nome      String
  email     String   @unique
  cpf       String   @unique
  userType String?
  whatsapp  String
  escola    String?
  cursoId   String?  // Para saber em qual curso ele se interessou
  createdAt DateTime @default(now())
  status    String   @default("PENDENTE") // PENDENTE, CONVERTIDO, DESISTENTE
}